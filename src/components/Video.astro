---
interface Props {
	title?: string | undefined;
    width: string;
    height: string;
    path: string;
}

const { title, path } = Astro.props;
---

<video
    class="video"
    id={title}
    autoplay
    muted
    loop
>
    <source src={path} type="video/webm">
</video>

<style>
    .video
    {
        width: 100%;
        margin: 0 auto;
        border-radius: 1.5rem;
        box-shadow: var(--shadow-sm);
        background: var(--gradient-subtle);
        border: 1px solid var(--gray-800);
        overflow: hidden;
    }
</style>
